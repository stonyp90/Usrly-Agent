{
  "name": "@ursly/premiere-pro-plugin",
  "version": "1.0.0",
  "description": "Ursly AI Assistant - Adobe Premiere Pro UXP Plugin for local AI model integration",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prepare": "npm run build"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "keywords": [
    "adobe",
    "premiere-pro",
    "uxp",
    "plugin",
    "ai",
    "ursly",
    "ollama",
    "local-llm",
    "captions",
    "video-editing",
    "typescript"
  ],
  "author": "Ursly.io",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.0",
    "ts-jest": "^29.1.0",
    "typescript": "~5.3.3"
  },
  "dependencies": {
    "zod": "^3.22.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/__tests__/**/*.spec.ts"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/types/**/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/__tests__/setup.ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ursly/ursly.git",
    "directory": "integrations/premiere-pro"
  },
  "bugs": {
    "url": "https://github.com/ursly/ursly/issues"
  },
  "homepage": "https://ursly.io/integrations/premiere-pro"
}
