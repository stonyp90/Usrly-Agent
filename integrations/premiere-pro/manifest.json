{
  "id": "ursly.premiere.plugin",
  "name": "Ursly AI Assistant",
  "version": "1.0.0",
  "main": "index.html",
  "manifestVersion": 6,
  "host": [
    {
      "app": "premierepro",
      "minVersion": "25.0"
    }
  ],
  "entrypoints": [
    {
      "type": "panel",
      "id": "ursly.panel",
      "label": {
        "default": "Ursly AI"
      },
      "minimumSize": {
        "width": 280,
        "height": 400
      },
      "maximumSize": {
        "width": 600,
        "height": 1200
      },
      "preferredDockedSize": {
        "width": 320,
        "height": 500
      },
      "preferredFloatingSize": {
        "width": 320,
        "height": 500
      },
      "icons": [
        {
          "width": 24,
          "height": 24,
          "path": "icons/icon-24.png",
          "scale": [1, 2],
          "theme": ["darkest", "dark", "light", "lightest"]
        },
        {
          "width": 48,
          "height": 48,
          "path": "icons/icon-48.png",
          "scale": [1, 2],
          "theme": ["darkest", "dark", "light", "lightest"]
        }
      ]
    }
  ],
  "requiredPermissions": {
    "network": {
      "domains": [
        "localhost",
        "127.0.0.1",
        "*.local"
      ]
    },
    "localFileSystem": "fullAccess",
    "clipboard": "readAndWrite"
  }
}
