{
  "name": "agent-desktop",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/agent-desktop/src",
  "projectType": "application",
  "implicitDependencies": ["web"],
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd apps/agent-desktop && npx tauri dev",
        "cwd": "{workspaceRoot}"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/src-tauri/target/release/bundle"],
      "options": {
        "command": "cd apps/agent-desktop && npx tauri build",
        "cwd": "{workspaceRoot}"
      },
      "dependsOn": ["build-frontend", "web:build"]
    },
    "build-frontend": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "apps/agent-desktop/dist"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    }
  },
  "tags": ["type:app", "platform:desktop", "scope:agent"]
}
